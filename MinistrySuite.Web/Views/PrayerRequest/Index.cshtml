@model MinistrySuite.Web.ViewModels.PrayerRequestWeeklyVM

@{
    ViewBag.Title = "Index";
}
<link href="~/Content/sevenColumns.css" rel="stylesheet" />

<h2>Prayer requests this week</h2>


<div class="container">
    <div class="row seven-cols">
        @foreach (var item in Model.WeeklyPrayerRequests)
        {
            <div class="col-md-1">
                <table class="table table-condensed table-hover">
                    <thead>
                        <tr>
                            <th>@item.Date.DayOfWeek @item.Date.Day</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var request in item.PrayerRequestes)
                        {
                            <tr>
                                <td>
                                    @request.Title
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>
